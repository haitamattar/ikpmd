<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1">

    <ImageView
        android:id="@+id/advertIcon"
        android:layout_width="85dp"
        android:layout_height="85dp"
        android:scaleType="centerCrop"
        tools:contentDescription=""
        tools:src="@mipmap/ic_launcher" />

    <RelativeLayout
        android:id="@+id/advertTextLayout"
        android:layout_width="match_parent"
        android:layout_height="85dp">

        <TextView
            android:id="@+id/advertCategory"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:maxLines="1"
            android:textColor="#000000"
            android:textSize="12sp"
            tools:text="House and Garden" />

        <TextView
            android:id="@+id/advertTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/advertCategory"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="9dp"
            android:maxLines="2"
            android:textColor="#000000"
            android:textSize="18sp"
            tools:text="Gloed nieuwe Android telefoon te koop" />

        <TextView
            android:id="@+id/advertDescription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/advertTitle"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="9dp"
            android:layout_marginTop="2dp"
            android:ellipsize="end"
            android:maxLines="1"
            android:textSize="16sp"
            tools:text="ZO goed als nieuw en ook nog laag geprijst" />
    </RelativeLayout>

</LinearLayout>
